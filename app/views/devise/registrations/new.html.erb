<div class="sign_up_container">
<h2 class="sign_up_title">Register</h2>
<div class="sign_up_form">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name, autofocus: true, autocompelte: 'name', placeholder: "fullname", class: "field" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", class: "field"  %>
  </div>

  
  
    <%
=begin%>
 <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>)</em>
    <% end %><br /> 
<%
=end%>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "password", class: "field" %>
  </div>

  <%
=begin%>
 <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div> 
<%
=end%>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
</div>

<%
=begin%>
 <%= render "devise/shared/links" %> 
<%
=end%>
</div>
