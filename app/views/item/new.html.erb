<div class="item_container_new">
<div class="item_container_new">
  <%= form_with model: @item, url: item_index_path do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'new_input' %>

    <%= f.label :amount %>
    <%= f.text_field :amount, class: 'new_input'  %>

     <%= f.submit 'Create Item', class: 'new_submit'  %>
        
    <%= f.select :group_id, @groups.pluck(:name,:id), {prompt:'Group'}, {class: "form-control"}%>

  <% end %>
</div>

  <%= link_to 'Back Items', item_index_path %>
</div>
