<div class="item_container_new">
<%= form_with model: [@group, @item], url: group_items_path(@group) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :amount %>
    <%= f.number_field :amount %>

    <%= f.label :grups %>
    <%= f.collection_select :group_ids, current_user.groups, :id, :name, {}, { multiple: true } %>

    <%= f.submit 'Save' %>
<% end %>

<%= link_to 'Back Items', group_items_path(@group) %>
</div>