<div class="table_container">
<table class="table mx-auto p-lg-5 table-striped bg-light p-2 table-hover">
  <thead>
    <tr>
      <th scope="col">S.No</th>
      <th scope="col">Name</th>
      <th scope="col">Total</th>
      <th scope="col">created at</th>
    </tr>
  </thead>
  <tbody>

    <% @group_items.each_with_index do |item, index| %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%= item.name %></td>
        <td><%= item.group_item %></td>
        <td><%= item.created_at.strftime("%e %B %Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>