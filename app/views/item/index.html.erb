<div class="item_con">
<% @items.each do |item| %>
<div class="item_index">
<div class="amount-item">
<h2><%= item.name %></h2>
$<%= item.amount %>
</div>
<div class="icon_item">
<%= image_tag item.icon_url if item.icon %>
<p class="item_date"><%= item.created_at.strftime('%e %B %Y') %> </p>
</div>
<% end %>
<%= link_to 'Back to group', group_index_path, class: 'back_link' %>
</div>

<div class="add_new_container">
<div class="add_new">
<%= link_to 'Back to Group', group_index_path, class: 'back_to_group' %>
</div>
</div>
