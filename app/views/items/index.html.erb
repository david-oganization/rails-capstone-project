<div class="item_container">
<h1>Items for <%= @group.name%></h1>
<p>Total Amount: <%= @total_amount %></p>

<% @items.each do |item| %>
<div class="item">
<p>Amount: <%= item.amount %></p>
</div>
<% end %>

<%= link_to 'Add New Item', new_group_item_path(@group) %>
<%= link_to 'Back to group', groups_path %>
</div>
